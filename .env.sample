# API
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=false

# Logging
LOG_LEVEL=INFO

# ClickHouse (write path)
CH_HOST=clickhouse
CH_PORT=9000
CH_DATABASE=matching
CH_TABLE=vectors
CH_USERNAME=default
CH_PASSWORD=
CH_SYNC_SCHEMA=true
CH_INDEX_METRIC=cosine

# Kafka producer
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_UPSERT=vector-upserted
KAFKA_CLIENT_ID=matching-write-service

# ML
ML_MODEL_NAME=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
ML_DEVICE=auto
ML_EMBEDDING_BATCH_SIZE=16
ML_MAX_TEXT_LENGTH=512
